{
	"name": "typescript-boilerplate",
	"version": "1.0.0",
	"description": "NodeJS Express using TypeScript to setup project",
	"main": "dist/index.js",
	"scripts": {
		"clean": " rimraf ./dist",
		"start": "ts-node src/index.ts",
		"start:prod": "npm run clean && npm run build && node dist/index.js",
		"tsc:dev": "ts-node-dev --respawn src/index.ts",
		"node:dev": "nodemon --exec ts-node src/index.ts",
		"build": "tsc -p .",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/blackinno/typescript-boilerplate.git"
	},
	"keywords": [
		"NodeJS",
		"node",
		"nodejs",
		"express",
		"typescript",
		"boillerplate"
	],
	"author": "Thotsaphon Ben Ruthamnong",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/blackinno/typescript-boilerplate/issues"
	},
	"homepage": "https://github.com/blackinno/typescript-boilerplate#readme",
	"dependencies": {
		"body-parser": "^1.19.0",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"morgan": "^1.10.0",
		"rimraf": "^3.0.2"
	},
	"devDependencies": {
		"@types/compression": "^1.7.0",
		"@types/cors": "^2.8.6",
		"@types/express": "^4.17.3",
		"@types/morgan": "^1.9.0",
		"@types/node": "^13.9.2",
		"nodemon": "^2.0.2",
		"ts-node": "^8.7.0",
		"ts-node-dev": "^1.0.0-pre.44",
		"typescript": "^3.8.3"
	}
}
